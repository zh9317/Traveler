<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3">

            <RelativeLayout
                android:id="@+id/start_layout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/start_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="南苑"
                    android:layout_below="@id/start_time"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/from_to_arrow_in_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:src="@drawable/from_to_arrow_96px" />

            <RelativeLayout
                android:id="@+id/end_layout"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22:00"
                    android:textSize="20sp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/end_airport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浦东"
                    android:layout_below="@id/end_time"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/flight_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="￥500"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plane"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/start_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中联航KN5987"/>

        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#aaaaaa"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/end_plane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="波音737(中)"/>

    </LinearLayout>

</LinearLayout>